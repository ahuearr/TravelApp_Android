<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gusycorp.travel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name=".application.TravelApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.HomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.Trip.TripActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.Trip.TripEditActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.Transport.TripTransportListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.Transport.TripTransportActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.Transport.TripTransportMatesActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.Accommodation.TripAccommodationListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.Accommodation.TripAccommodationActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.Accommodation.TripAccommodationMatesActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.Calendar.TripCalendarListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.Calendar.TripCalendarActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.Calendar.TripCalendarMatesActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.Map.TripMapActivity"
            android:label="@string/title_activity_trip_map" >
        </activity>
        <activity
            android:name=".activity.Mates.TripMatesActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.Login.TripLoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Login.TripLoginForgetPasswordActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.Login.TripLoginSignUpActivity"
            android:label="@string/app_name" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>
